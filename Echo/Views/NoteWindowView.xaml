<Window x:Class="Echo.Views.NoteWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Echo.ViewModels"
        mc:Ignorable="d"
        Title="Vocabulary" 
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="White"
        BorderBrush="#DDDDDD"
        BorderThickness="1"
         >

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <!-- 导航标签页 -->
            <RowDefinition Height="40"/>
            <!-- 功能栏 -->
            <RowDefinition Height="*"/>
            <!-- 主内容区 -->
        </Grid.RowDefinitions>

        <!-- 导航标签页 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TabControl  Grid.Column="0"  Grid.ColumnSpan="1" BorderThickness="0">
                <TabItem Header="单词" IsSelected="True" FontSize="16"/>
                <TabItem Header="句子" FontSize="16"/>
            </TabControl>
            <!-- 搜索框 -->
            <Border Grid.Column="1" 
                    Background="#F5F5F5" 
                    CornerRadius="15" 
                    Margin="10,0,10,0" 
                    HorizontalAlignment="Right"
                    Height="30"
                    BorderBrush="Aquamarine" >
                <Grid >
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             Margin="15,0"
                             Padding="5,0"
                             FontSize="14"
                             />
                    <TextBlock Text="搜索"
                             Margin="20,0,10,0"
                             VerticalAlignment="Center"
                             Foreground="#999"
                             IsHitTestVisible="False"
                               Width="50"
                              
                               >
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
        
        

        <!-- 功能栏 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧功能按钮 -->
            <StackPanel Orientation="Horizontal" Margin="10,0" Height="25">
                <ComboBox Width="120" ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox Width="120" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}" Margin="5,0"/>
                <ComboBox Width="100" ItemsSource="{Binding FilterOptions}" SelectedItem="{Binding SelectedFilterOption}" Margin="5,0"/>
            </StackPanel>

            <!-- 中间按钮组 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="⏵" />
            </StackPanel>

        </Grid>

        <!-- 主内容区 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧单词列表 -->
            <ListView ItemsSource="{Binding Words}" 
                      SelectedItem="{Binding SelectedWord}"
                      BorderThickness="0"
                      Background="Transparent"
                       Width="120" Margin="1,10,1,-10">
                <ListView.ItemTemplate>
                    <DataTemplate>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="3,3,3,3">
                                <TextBlock Text="{Binding Index}" 
                                     Foreground="#999"
                                       Margin="0,0,6,0" Width="30"/>
                                <TextBlock Text="{Binding Word}" 
                                         FontSize="12"/>
                            </StackPanel>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- 分割线 -->
            <Border Grid.Column="1"
            Background="Gray"
            Width="1"
            VerticalAlignment="Stretch"
            Margin="0,10,0,10"/>

            <!-- 右侧单词详情 -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 单词标题区 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding SelectedWord.Word}" 
                             FontSize="24" 
                             FontWeight="Bold"/>
                    <Button Content="⭐" 
                            Margin="10,0"/>
                    <Button Content="✎" />
                </StackPanel>
                

                <!-- 音标区 -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="英 /gru:p/" VerticalAlignment="Center"/>
                        <Button Content="🔊" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="美 /gru:p/" VerticalAlignment="Center"/>
                        <Button Content="🔊" />
                    </StackPanel>
                </StackPanel>



                <!-- 释义区 -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10" >
                    <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="英 /gru:p/" VerticalAlignment="Center"/>
                        
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="美 /gru:p/" VerticalAlignment="Center"/>
                     
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="16"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FunctionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ViewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="NavigationTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ContentTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
</Window>